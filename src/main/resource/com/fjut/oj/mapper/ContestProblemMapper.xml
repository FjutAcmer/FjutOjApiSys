<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fjut.oj.mapper.ContestProblemMapper">

    <select id="getContestProblemsByCid" resultType="com.fjut.oj.pojo.ContestProblem">
        SELECT *
        FROM contestproblems
        WHERE cid=#{cid}
    </select>

    <insert id="insertContestProblem" parameterType="com.fjut.oj.pojo.ContestProblem">
         INSERT INTO
         consterproblems
         VALUES(
         #{contestProblem.cid},
         #{contestProblem.pid},
         #{contestProblem.tpid}
         )
    </insert>

    <insert id="insertContestProblems" parameterType="java.util.ArrayList">
        INSERT INTO
        contestproblems
        VALUES
        <foreach collection="contestProblems" index="index" separator="," item="item">
            (
            #{item.cid},
            #{item.pid},
            #{item.tpid}
            )
        </foreach>

    </insert>

</mapper>
